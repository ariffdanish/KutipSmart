@model KutipSmart.Models.Truck

@{
    ViewData["Title"] = "Create Truck";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <div class="card-header">
                    <h4 class="card-title" style="text-align:center">@ViewData["Title"]</h4>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <i data-feather="truck"></i>
                        <label asp-for="TruckNo" class="form-label"></label>
                        <input asp-for="TruckNo" class="form-control" />
                        <span asp-validation-for="TruckNo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <i data-feather="clipboard"></i>
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<TruckStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <i data-feather="user"></i>
                        <label asp-for="DriverName" class="form-label"></label>
                        <input asp-for="DriverName" class="form-control" />
                        <span asp-validation-for="DriverName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <i data-feather="phone"></i>
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <i data-feather="home"></i>
                        <label asp-for="Company" class="form-label"></label>
                        <input asp-for="Company" class="form-control" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>

                    @* CreatedAt and UpdatedAt are managed in controller, no need to show *@

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
