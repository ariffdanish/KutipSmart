@model KutipSmart.Models.Truck

@{
    ViewData["Title"] = "Truck Details";
}

<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="fa fa-truck"></i> Truck Details <small>Information</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model?.TruckId">Edit</a>
                        <a class="dropdown-item" asp-action="Index">Back to List</a>
                    </div>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th><i class="fa fa-hashtag"></i> @Html.DisplayNameFor(m => m.TruckNo)</th>
                                <td>@Html.DisplayFor(m => m.TruckNo)</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-signal"></i> @Html.DisplayNameFor(m => m.Status)</th>
                                <td>@Html.DisplayFor(m => m.Status)</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-user"></i> @Html.DisplayNameFor(m => m.DriverName)</th>
                                <td>@Html.DisplayFor(m => m.DriverName)</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-phone"></i> @Html.DisplayNameFor(m => m.Phone)</th>
                                <td>@Html.DisplayFor(m => m.Phone)</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-building"></i> @Html.DisplayNameFor(m => m.Company)</th>
                                <td>@Html.DisplayFor(m => m.Company)</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-calendar"></i> @Html.DisplayNameFor(m => m.CreatedAt)</th>
                                <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-3">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model?.TruckId">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-secondary" asp-action="Index">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}