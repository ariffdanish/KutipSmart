@model KutipSmart.Models.Truck

@{
    ViewData["Title"] = "Truck Details";
}

<div class="container">
    <div class="page-inner">
 
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-0"><i class="fa fa-info-circle me-2"></i>Truck Information</h4>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model?.TruckId">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-primary" asp-action="Index">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <table class="table table-borderless table-striped">
                            <tbody>
                                <tr>
                                    <th><i class="fa fa-hashtag me-1"></i> @Html.DisplayNameFor(m => m.TruckNo)</th>
                                    <td>@Html.DisplayFor(m => m.TruckNo)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-signal me-1"></i> @Html.DisplayNameFor(m => m.Status)</th>
                                    <td>@Html.DisplayFor(m => m.Status)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-user me-1"></i> @Html.DisplayNameFor(m => m.DriverName)</th>
                                    <td>@Html.DisplayFor(m => m.DriverName)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-phone me-1"></i> @Html.DisplayNameFor(m => m.Phone)</th>
                                    <td>@Html.DisplayFor(m => m.Phone)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-building me-1"></i> @Html.DisplayNameFor(m => m.Company)</th>
                                    <td>@Html.DisplayFor(m => m.Company)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-calendar me-1"></i> @Html.DisplayNameFor(m => m.CreatedAt)</th>
                                    <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
