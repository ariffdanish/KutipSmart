@model KutipSmart.Models.Truck

@{
    ViewData["Title"] = "Truck Details";
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row">
            <h5 class="card-title"><i data-feather="truck"></i> Truck Details</h5>
            <hr /> 
            <dt class="col-sm-3"><i data-feather="hash"></i> @Html.DisplayNameFor(m => m.TruckNo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.TruckNo)</dd>

            <dt class="col-sm-3"><i data-feather="activity"></i> @Html.DisplayNameFor(m => m.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

            <dt class="col-sm-3"><i data-feather="user"></i> @Html.DisplayNameFor(m => m.DriverName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DriverName)</dd>

            <dt class="col-sm-3"><i data-feather="phone"></i> @Html.DisplayNameFor(m => m.Phone)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Phone)</dd>

            <dt class="col-sm-3"><i data-feather="briefcase"></i> @Html.DisplayNameFor(m => m.Company)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Company)</dd>

            <dt class="col-sm-3"><i data-feather="calendar"></i> @Html.DisplayNameFor(m => m.CreatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedAt)</dd>

        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.TruckId">
        <i data-feather="edit-3"></i> Edit
    </a>
    <a class="btn btn-secondary" asp-action="Index">
        <i data-feather="arrow-left-circle"></i> Back to List
    </a>
</div>

@section Scripts {
    <script src="https://unpkg.com/feather-icons"></script>
    <script>feather.replace()</script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
