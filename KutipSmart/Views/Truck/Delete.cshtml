@model KutipSmart.Models.Truck

@{
    ViewData["Title"] = "Delete Truck";
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="my-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Truck")"><i class="fas fa-truck"></i> Trucks</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-trash-alt"></i> Delete Truck</li>
        </ol>
    </nav>

    <div class="page-inner">

        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong> Warning:</strong> You are about to permanently delete this truck record. This action <strong>cannot</strong> be undone.
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 style="text-align">
                    <i class="fas fa-truck"></i> Truck Details
                </h5>
                <hr />
                <div class="card shadow">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.TruckNo)</th>
                                <td>@Html.DisplayFor(model => model.TruckNo)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <td>@Html.DisplayFor(model => model.Status)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DriverName)</th>
                                <td>@Html.DisplayFor(model => model.DriverName)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <td>@Html.DisplayFor(model => model.Phone)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Company)</th>
                                <td>@Html.DisplayFor(model => model.Company)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="TruckId" />
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>  Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-left"></i>  Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
