@model IEnumerable<KutipSmart.Models.Truck>

@{
    ViewData["Title"] = "Trucks List";
}

<div class="container">
    <div class="page-inner">
        <!-- <div class="page-header">
            <h3 class="fw-bold mb-3"><i class="fa fa-truck me-2"></i>@ViewData["Title"]</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="/"><i class="icon-home"></i></a>
                </li>
            </ul>
        </div>-->

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h4 class="card-title mb-0">Trucks List</h4>
                        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i> Create</a>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.TruckNo)</th>
                                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                                        <th>@Html.DisplayNameFor(model => model.DriverName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                        <th>@Html.DisplayNameFor(model => model.Company)</th>
                                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.TruckNo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DriverName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Company)</td>
                                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.TruckId" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.TruckId" class="btn btn-sm btn-info me-1" title="View Details">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.TruckId" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            $('#basic-datatables').DataTable({
                responsive: true,
                fixedHeader: true
            });
        });
    </script>
}
