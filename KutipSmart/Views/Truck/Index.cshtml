@model IEnumerable<KutipSmart.Models.Truck>

@{
    ViewData["Title"] = "Trucks List";
}

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title d-flex justify-content-between align-items-center">
            <h2>@ViewData["Title"]</h2>

            <div>
                <a asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa fa-plus"></i> Create
                </a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TruckNo)</th>
                                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                                    <th>@Html.DisplayNameFor(model => model.DriverName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.Company)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TruckNo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DriverName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Company)</td>
                                        <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.TruckId" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.TruckId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TruckId" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

