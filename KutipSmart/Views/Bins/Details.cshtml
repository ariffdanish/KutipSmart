@model KutipSmart.Models.Bin

@{
    ViewData["Title"] = "Bin Details";
}

<div class="container">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Bin")">Bins</a></li>
            <li class="breadcrumb-item active" aria-current="page">Bin Details</li>
        </ol>
    </nav>

    <div class="page-inner">

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fa fa-binoculars me-2"></i>Bin Information
                        </h4>
                        <div>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model?.BinId" title="Edit">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-primary" asp-action="Index" title="Back to List">
                                <i class="fa fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <table class="table table-borderless table-striped">
                            <tbody>
                                <tr>
                                    <th><i class="fa fa-hashtag me-1"></i> @Html.DisplayNameFor(m => m.BinNo)</th>
                                    <td>@Html.DisplayFor(m => m.BinNo)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-road me-1"></i> @Html.DisplayNameFor(m => m.Street)</th>
                                    <td>@Html.DisplayFor(m => m.Street)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-city me-1"></i> @Html.DisplayNameFor(m => m.City)</th>
                                    <td>@Html.DisplayFor(m => m.City)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-map me-1"></i> @Html.DisplayNameFor(m => m.State)</th>
                                    <td>@Html.DisplayFor(m => m.State)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-mail-bulk me-1"></i> @Html.DisplayNameFor(m => m.PostCode)</th>
                                    <td>@Html.DisplayFor(m => m.PostCode)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-info-circle me-1"></i> @Html.DisplayNameFor(m => m.Status)</th>
                                    <td>@Html.DisplayFor(m => m.Status)</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-calendar-alt me-1"></i> @Html.DisplayNameFor(m => m.CreatedAt)</th>
                                    <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                                <tr>
                                    <th><i class="fa fa-calendar-check me-1"></i> @Html.DisplayNameFor(m => m.UpdatedAt)</th>
                                    <td>@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
