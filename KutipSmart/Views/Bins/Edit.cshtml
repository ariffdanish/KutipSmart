@model KutipSmart.Models.Bin

@{
    ViewData["Title"] = "Edit Bin";
}

<div class="container">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Bin")">Bins</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Bin</li>
        </ol>
    </nav>

    <div class="page-inner">

        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card shadow-sm border-0">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i data-feather="edit-3"></i> Edit Bin Details
                        </h4>
                        <p class="card-category text-muted mb-0">Update the bin information below</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <input type="hidden" asp-for="BinId" />
                            <input type="hidden" asp-for="CreatedAt" />
                            <input type="hidden" asp-for="UpdatedAt" />

                            <div class="mb-3">
                                <label asp-for="BinNo" class="form-label">
                                    <i data-feather="hash"></i> @Html.DisplayNameFor(m => m.BinNo)
                                </label>
                                <input asp-for="BinNo" class="form-control" placeholder="Enter Bin Number" />
                                <span asp-validation-for="BinNo" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Street" class="form-label">
                                    <i data-feather="map-pin"></i> @Html.DisplayNameFor(m => m.Street)
                                </label>
                                <input asp-for="Street" class="form-control" placeholder="Enter Street" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="City" class="form-label">
                                    <i data-feather="home"></i> @Html.DisplayNameFor(m => m.City)
                                </label>
                                <input asp-for="City" class="form-control" placeholder="Enter City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="State" class="form-label">
                                    <i data-feather="map"></i> @Html.DisplayNameFor(m => m.State)
                                </label>
                                <input asp-for="State" class="form-control" placeholder="Enter State" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PostCode" class="form-label">
                                    <i data-feather="hash"></i> @Html.DisplayNameFor(m => m.PostCode)
                                </label>
                                <input asp-for="PostCode" class="form-control" placeholder="Enter PostCode" />
                                <span asp-validation-for="PostCode" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Status" class="form-label">
                                    <i data-feather="toggle-right"></i> @Html.DisplayNameFor(m => m.Status)
                                </label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<KutipSmart.Models.BinStatus>()">
                                    <option value="">-- Select Status --</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-primary btn-sm">
                                    <i data-feather="arrow-left-circle"></i> Back
                                </a>
                                <div>
                                    <button type="reset" class="btn btn-outline-secondary btn-sm me-2">
                                        <i data-feather="refresh-ccw"></i> Reset
                                    </button>
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i data-feather="save"></i> Save Changes
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
