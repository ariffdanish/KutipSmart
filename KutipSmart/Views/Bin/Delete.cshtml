@model KutipSmart.Models.Bin

@{
    ViewData["Title"] = "Delete Bin";
}

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i data-feather="alert-triangle" class="me-2"></i>
    <div>
        You are about to permanently delete this bin record. This action cannot be undone.
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="card-title"><i data-feather="trash-2"></i> Bin Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BinNo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BinNo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Street)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Street)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.City)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.State)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.State)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PostCode)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PostCode)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="BinId" />
            <button type="submit" class="btn btn-danger">
                <i data-feather="trash-2"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i data-feather="arrow-left-circle"></i> Back to List
            </a>
        </form>
    </div>
</div>


