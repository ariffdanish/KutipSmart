@model IEnumerable<KutipSmart.Models.Schedule>


<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">
                <i class="fas fa-home text-primary"></i> Home
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fas fa-calendar-alt text-dark"></i> Schedule List
        </li>
    </ol>
</nav>

@{
    ViewData["Title"] = "Schedule List";
}

<!-- Top header with aligned title and button -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold mb-0 text-dark">Schedule List</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Add New Schedule
    </a>
</div>

<!-- Table -->
<table class="table table-bordered table-striped align-middle text-center">
    <thead class="table-light">
        <tr>
            <th>Bin</th>
            <th>Truck</th>
            <th>Scheduled Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Bin?.BinNo</td>
                <td>@item.Truck?.TruckNo</td>
                <td>@item.ScheduledDateTime.ToString("g")</td>
                <td>
                    <span class="badge bg-secondary">@item.Status</span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
