@model IEnumerable<KutipSmart.Models.Schedule>
@{
    ViewData["Title"] = "Schedule List";
}

<h2>Schedule List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Schedule</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Bin</th>
            <th>Truck</th>
            <th>Scheduled Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Bin?.BinNo</td>
                <td>@item.Truck?.TruckNo</td>
                <td>@item.ScheduledDateTime.ToString("g")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
