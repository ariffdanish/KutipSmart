@model IEnumerable<KutipSmart.Models.Schedule>

@{
    ViewData["Title"] = "Schedule List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold mb-0">Schedule List</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Schedule
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.BinName)</th>
            <th>@Html.DisplayNameFor(model => model.CollectorName)</th>
            <th>@Html.DisplayNameFor(model => model.ScheduledDateTime)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BinName</td>
                <td>@item.CollectorName</td>
                <td>@item.ScheduledDateTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                <td>
                    <span class="badge bg-@(item.Status switch {
                        "Scheduled" => "info",
                        "Completed" => "success",
                        "Missed" => "danger",
                        _ => "secondary"
                    })">
                        @item.Status
                    </span>
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this schedule?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
