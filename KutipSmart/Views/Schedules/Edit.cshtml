@model KutipSmart.Models.Schedule
@{
    ViewData["Title"] = "Edit Schedule";
}

<h2>Edit Schedule</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ScheduleId" />

    <div class="form-group">
        <label asp-for="BinId">Bin</label>
        <select asp-for="BinId" class="form-control" asp-items="ViewBag.BinId"></select>
        <span asp-validation-for="BinId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TruckId">Truck</label>
        <select asp-for="TruckId" class="form-control" asp-items="ViewBag.TruckId"></select>
        <span asp-validation-for="TruckId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduledDateTime">Scheduled Time</label>
        <input asp-for="ScheduledDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ScheduledDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Scheduled">Scheduled</option>
            <option value="Completed">Completed</option>
            <option value="Missed">Missed</option>
            <option value="Reassigned">Reassigned</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
