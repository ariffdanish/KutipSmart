@model KutipSmart.Models.Schedule

@{
    ViewData["Title"] = "Create Schedule";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BinName" class="control-label">Bin ID</label>
                <input asp-for="BinName" class="form-control" placeholder="Enter Bin ID" />
                <span asp-validation-for="BinName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CollectorName" class="control-label">Lorry Plate Number</label>
                <input asp-for="CollectorName" class="form-control" placeholder="Enter Lorry Plate Number" />
                <span asp-validation-for="CollectorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScheduledDateTime" class="control-label"></label>
                <input asp-for="ScheduledDateTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="ScheduledDateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Missed">Missed</option>
                    <option value="Reassigned">Reassigned</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
