@model KutipSmart.Models.Schedule
@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-3">Bin</dt>
    <dd class="col-sm-9">@Model.Bin?.BinNo</dd>

    <dt class="col-sm-3">Truck</dt>
    <dd class="col-sm-9">@Model.Truck?.TruckNo</dd>

    <dt class="col-sm-3">Scheduled Time</dt>
    <dd class="col-sm-9">@Model.ScheduledDateTime</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ScheduleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
